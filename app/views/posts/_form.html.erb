<h1> Add a new Post!</h1>

  <p>please add your new post here!</p>

  <%= form_for Post.new do |f| %>
  
  <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :text %><br>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>
    <div class="col-xs-4">
      <%= f.submit "Create", class: "btn" %>
    </div>

  <% end %>


